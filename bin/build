#!/bin/sh
set -e;

# Combine and minify javascripts
echo "Combining and minifying JavaScripts...";
./node_modules/.bin/uglifyjs \
    src/libs/EventEmitter.js \
    src/applait.finder.js \
    --screw-ie8 \
    --comments \
    -c \
    -o applait.finder.min.js

# Generate docs
echo "Generating API docs";
./node_modules/.bin/jsdoc -c ./jsdoc.conf.json
